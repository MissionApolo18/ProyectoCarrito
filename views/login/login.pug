doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Formulario de Cliente
    link(rel="stylesheet", href="../public/CSS/estilo.css")
  body
    h1 Formulario de Registro de Cliente
    form(action="/guardar-cliente" method="POST")
      label(for="nombre") Nombre:
      br
      input(type="text" id="nombre" name="nombre" required)
      br
      br
      label(for="apellido_paterno") Apellido Paterno:
      br
      input(type="text" id="apellido_paterno" name="apellido_paterno" required)
      br
      br
      label(for="apellido_materno") Apellido Materno:
      br
      input(type="text" id="apellido_materno" name="apellido_materno")
      br
      br
      label(for="correo") Correo Electrónico:
      br
      input(type="email" id="correo" name="correo" required)
      br
      br
      label(for="telefono") Teléfono:
      br
      input(type="tel" id="telefono" name="telefono")
      br
      br
      button(type="submit") Enviar
